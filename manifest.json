/**
 * Universal Reader Mode - Chrome Extension Manifest
 * 
 * This manifest defines the extension configuration including permissions,
 * scripts, and UI elements for the universal reader mode functionality.
 * 
 * @version 1.0.0
 * @author 010io
 */

{
  "manifest_version": 3,
  "name": "Universal Reader Mode",
  "description": "Universal reader mode for all websites with Shadow DOM support",
  "version": "1.0.0",
  "author": "010io",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/inject.js"],
      "css": ["src/style.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Universal Reader Mode",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["src/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
